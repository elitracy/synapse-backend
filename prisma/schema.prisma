generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String       @id @unique @default(cuid())
  Name       String?
  Email      String?
  Password   String?
  Note       Note[]
  Outline    Outline[]
  Lecture    Lecture[]
  Groups     Group[]
}

model Group {
  id         String       @id @unique @default(cuid())
  Name       String?
  Outline    Outline[]
  Users      User[]
}

model Note {
  id        String   @id @unique @default(cuid())
  Context   String?
  Owner     User?    @relation(fields: [userId], references: [id])
  Outline   Outline? @relation(fields: [outlineId], references: [id])
  userId    String?
  outlineId String?
}

model Outline {
  id      String    @id @unique @default(cuid())
  Summary String?
  Owner   User?     @relation(fields: [userId], references: [id])
  Group   Group?    @relation(fields: [groupId], references: [id])
  Note    Note[]
  userId  String?
  groupId String?
  Lecture Lecture[]
}

model Lecture {
  id         String    @id @unique @default(cuid())
  Transcript String?
  Youtube    String?
  Outline    Outline?  @relation(fields: [outlineId], references: [id])
  Owner      User?     @relation(fields: [userId], references: [id])
  outlineId  String?
  userId     String?
}
