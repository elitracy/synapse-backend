generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String       @id @unique @default(cuid())
  name       String
  email      String
  password   String
  note       Note[]
  outline    Outline[]
  lecture    Lecture[]
  groups     Group[]
  @@unique([email])
}

model Group {
  id         String       @id @unique @default(cuid())
  name       String?
  outline    Outline[]
  users      User[]
}

model Note {
  id        String   @id @unique @default(cuid())
  context   String?
  owner     User?    @relation(fields: [userId], references: [id])
  outline   Outline? @relation(fields: [outlineId], references: [id])
  userId    String?
  outlineId String?
}

model Outline {
  id      String    @id @unique @default(cuid())
  summary String?
  owner   User?     @relation(fields: [userId], references: [id])
  group   Group?    @relation(fields: [groupId], references: [id])
  note    Note[]
  userId  String?
  groupId String?
  lecture Lecture[]
}

model Lecture {
  id         String    @id @unique @default(cuid())
  transcript String?
  youtube    String?
  outline    Outline?  @relation(fields: [outlineId], references: [id])
  owner      User?     @relation(fields: [userId], references: [id])
  outlineId  String?
  userId     String?
}
